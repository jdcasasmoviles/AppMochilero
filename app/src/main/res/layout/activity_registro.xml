<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/bgcolor"
        tools:context="com.jdcasas.appmochilero.RegistroActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView1" >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registrate"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:id="@+id/tw_registrarse"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/rounded_corners_azul"
                    android:layout_marginBottom="15dp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Apodo"
                            android:textSize="@dimen/formularioletra"
                            android:id="@+id/tw_apodo"
                            android:background="@drawable/rounded_corners_textview"
                            android:layout_marginBottom="@dimen/espacio_textview"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Email"
                            android:textSize="@dimen/formularioletra"
                            android:id="@+id/tw_email"
                            android:background="@drawable/rounded_corners_textview"
                            android:layout_marginBottom="@dimen/espacio_textview"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Password"
                            android:textSize="@dimen/formularioletra"
                            android:id="@+id/tw_password"
                            android:background="@drawable/rounded_corners_textview"
                            android:layout_marginBottom="@dimen/espacio_textview"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_apodo"
                            android:inputType="textEmailAddress"
                            android:text=""
                            android:textSize="@dimen/formularioletra"
                            android:layout_marginLeft="10dp"
                            android:editable="true" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_email"
                            android:inputType="textEmailAddress"
                            android:text=""
                            android:textSize="@dimen/formularioletra"
                            android:layout_marginLeft="10dp"
                            android:editable="true" />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_password"
                            android:inputType="text"
                            android:text=""
                            android:textSize="@dimen/formularioletra"
                            android:layout_marginLeft="10dp"
                            android:editable="true" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TextViewActualizarGPS"
                            android:text="LLenar  GPS"
                            android:textColor="@android:color/white"
                            android:background="@drawable/rounded_corners_azul"
                            android:gravity="center_horizontal"
                            android:layout_marginBottom="5dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Longitud"
                                    android:textSize="@dimen/formularioletra"
                                    android:id="@+id/textViewLongitud"
                                    android:background="@drawable/rounded_corners_textview"
                                    android:layout_marginBottom="@dimen/espacio_textview"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Latitud"
                                    android:textSize="@dimen/formularioletra"
                                    android:id="@+id/textViewLatitud"
                                    android:background="@drawable/rounded_corners_textview"
                                    android:layout_marginBottom="@dimen/espacio_textview"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6">
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_longitud"
                                    android:text=""
                                    android:textSize="@dimen/formularioletra"
                                    android:editable="false"
                                    android:layout_marginLeft="10dp"
                                    />
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/et_latitud"
                                    android:text=""
                                    android:textSize="@dimen/formularioletra"
                                    android:editable="false"
                                    android:layout_marginLeft="10dp"
                                    />
                            </LinearLayout>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activar"
                                android:id="@+id/btnLlenarsGPS"
                                android:layout_marginTop="5dp"
                                android:textSize="10dp"
                                android:textStyle="bold"
                                android:theme="@style/MyButton"
                                android:gravity="center|center_horizontal"
                                android:layout_gravity="center_horizontal" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registro"
                        android:id="@+id/bt_registrar"
                        android:textSize="@dimen/formularioletra"
                        android:theme="@style/MyButton"
                        android:layout_marginRight="4dip"
                        android:enabled="true"
                        android:layout_weight="0.3"
                        android:layout_margin="5dp" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:textSize="@dimen/formularioletra"
                        android:id="@+id/ButtonReset"
                        android:layout_marginRight="4dip"
                        android:theme="@style/MyButton"
                        android:layout_weight="0.3"
                        android:layout_margin="5dp" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volver"
                        android:textSize="@dimen/formularioletra"
                        android:id="@+id/ButtonVolver"
                        android:layout_marginRight="4dip"
                        android:theme="@style/MyButton"
                        android:layout_weight="0.3"
                        android:layout_margin="5dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>